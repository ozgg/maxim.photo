<% content_for :meta_title, @theme.name %>
<% content_for :meta_image, request.protocol + request.host_with_port + @theme.image.medium.url %>
<% content_for :meta_type, 'article' %>
<% content_for :meta_type_extension do %>
    <meta property="og:article:published_time" content="<%= @theme.created_at.strftime('%Y-%m-%d') %>"/>
    <meta property="og:article:modified_time" content="<%= @theme.updated_at.strftime('%Y-%m-%d') %>"/>
<% end %>

<article>
  <h1><%= @theme.name %></h1>

  <%= render partial: 'portfolio/albums', locals: { albums: @theme.albums.list_for_visitor } %>
</article>