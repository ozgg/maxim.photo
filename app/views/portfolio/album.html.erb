<% content_for :meta_title, @album.long_name %>
<% content_for :meta_image, request.protocol + request.host_with_port + @album.image.medium.url %>
<% content_for :meta_type, 'article' %>
<% content_for :meta_type_extension do %>
    <meta property="og:article:published_time" content="<%= @album.created_at.strftime('%Y-%m-%d') %>"/>
    <meta property="og:article:modified_time" content="<%= @album.updated_at.strftime('%Y-%m-%d') %>"/>
    <meta property="og:article:author" content="<%= t('layouts.footer.copyright') %>"/>
    <meta property="og:article:section" content="<%= @album.theme.name %>"/>
<% end %>

<article>
  <h1><%= @album.long_name %></h1>

  <%= render partial: 'photos', locals: { photos: @album.photos_for_portfolio } %>
</article>
