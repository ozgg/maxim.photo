<% content_for :meta_title, t('.title', title: @entity.title) %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('admin.albums.nav_item.text'), admin_albums_path) %>
  <%= admin_album_link(@entity.album) %>
  <%= link_to(t('admin.albums.photos.nav_text'), photos_admin_album_path(id: @entity.album_id)) %>
  <span><%= @entity.title %></span>
<% end %>

<article>
  <h1><%= @entity.title %></h1>

  <ul class="actions">
    <li><%= back_icon(admin_album_path(id: @entity.album_id)) %></li>
    <li><%= return_icon(photos_admin_album_path(id: @entity.album_id)) %></li>
    <li><%= edit_icon(edit_photo_path(id: @entity.id)) %></li>
  </ul>

  <dl>
    <dt><%= t('activerecord.attributes.photo.album_id') %></dt>
    <dd><%= admin_album_link(@entity.album) %></dd>

    <% unless @entity.image.blank? %>
      <dt><%= t('activerecord.attributes.photo.image') %></dt>
      <dd>
        <figure role="group">
          <%= photo_image_medium(@entity) %>
          <figcaption><%= @entity.image_alt_text %></figcaption>
        </figure>
      </dd>
    <% end %>

    <dt><%= t(:created_at) %></dt>
    <dd><%= time_tag(@entity.created_at) %></dd>

    <dt><%= t(:updated_at) %></dt>
    <dd><%= time_tag(@entity.updated_at) %></dd>

    <% unless @entity.title.blank? %>
      <dt><%= t('activerecord.attributes.photo.title') %></dt>
      <dd><%= @entity.title %></dd>
    <% end %>

    <% unless @entity.meta_title.blank? %>
      <dt><%= t('activerecord.attributes.photo.meta_title') %></dt>
      <dd><%= @entity.meta_title %></dd>
    <% end %>

    <% unless @entity.meta_description.blank? %>
      <dt><%= t('activerecord.attributes.photo.meta_description') %></dt>
      <dd><%= @entity.meta_description %></dd>
    <% end %>

    <% unless @entity.meta_keywords.blank? %>
      <dt><%= t('activerecord.attributes.photo.meta_keywords') %></dt>
      <dd><%= @entity.meta_keywords %></dd>
    <% end %>
  </dl>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  {
            entity: @entity,
            url:    toggle_admin_photo_path(id: @entity.id)
        }
    )
  %>
</article>
