<div class="image">
  <%= simple_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_photo_link(entity) %></div>
  <div class="info">
    <%= entity.image_alt_text %>
  </div>
  <% unless entity.album.nil? %>
    <div class="secondary info">
      <%= admin_album_link(entity.album) %>
    </div>
  <% end %>
  <div class="secondary info">
    <%= entity.photo_tags.map(&:name).join(', ') %>
  </div>

  <ul class="actions">
    <li><%= edit_icon(edit_photo_path(id: entity.id)) %></li>
  </ul>
</div>
