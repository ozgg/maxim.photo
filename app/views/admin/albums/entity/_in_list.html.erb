<div class="image">
  <%= album_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_album_link(entity) %></div>
  <div class="info">
    <%= entity.slug %><br/>
    <%= t(:photo_count, count: entity.photos_count) %>
  </div>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  {
            entity: entity,
            url:    toggle_admin_album_path(entity.id)
        }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_album_path(entity.id)) %></li>
    <%=
      render(
          partial: 'shared/actions/priority_changer',
          locals: { path: priority_admin_album_path(entity.id) }
      )
    %>
  </ul>
</div>
