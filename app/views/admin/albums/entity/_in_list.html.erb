<div class="image">
  <%= simple_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_album_link(entity) %></div>
  <div class="info">
    <%= entity.slug %>
    <% unless entity.description.blank? %>
      <div><%= entity.description %></div>
    <% end %>
  </div>
  <div class="secondary info">
    <%= t(:photo_count, count: entity.photos_count) %>
  </div>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals: {
            entity: entity,
            url: toggle_admin_album_path(id: entity.id)
        }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_album_path(id: entity.id)) %></li>
  </ul>
</div>
