<% content_for :meta_title, t('.title', slug: @entity.slug) %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('admin.albums.nav_item.text'), admin_albums_path) %>
  <span><%= @entity.slug %></span>
<% end %>

<article>
  <h1><%= @entity.slug %></h1>

  <ul class="actions">
    <li><%= back_icon(admin_albums_path) %></li>
    <li><%= edit_icon(edit_album_path(id: @entity.id)) %></li>
  </ul>

  <dl>
    <% unless @entity.image.blank? %>
      <div>
        <dt><%= t('activerecord.attributes.album.image') %></dt>
        <dd>
          <figure role="group" class="preview">
            <%= simple_image_medium(@entity) %>
            <figcaption><%= @entity.image_alt_text %></figcaption>
          </figure>
        </dd>
      </div>
    <% end %>

    <div>
      <dt><%= t('activerecord.attributes.album.name') %></dt>
      <dd><%= @entity.name %></dd>
    </div>

    <div>
      <dt><%= t('activerecord.attributes.album.slug') %></dt>
      <dd><%= @entity.slug %></dd>
    </div>

    <% unless @entity.description.blank? %>
      <dt><%= t('activerecord.attributes.album.description') %></dt>
      <dd><%= @entity.description %></dd>
    <% end %>

    <%= render partial: 'shared/entity/timestamps', locals: { entity: @entity } %>
  </dl>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  {
            entity: @entity,
            url:    toggle_admin_album_path(id: @entity.id)
        }
    )
  %>

  <%=
    render(
        partial: 'admin/albums/entity/photos',
        locals: {
            entity: @entity,
            collection: @entity.photos.list_for_administration
        }
    )
  %>
</article>
