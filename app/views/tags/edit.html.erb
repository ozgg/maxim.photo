<% content_for :meta_title, t('.title') %>
<% content_for :options do %>
    <ul>
      <li><%= link_to t(:create), new_tag_path %></li>
      <li><%= link_to t(:view), @entity %></li>
      <li><%= link_to t(:list), tags_path %></li>
      <li><%= link_to_delete @entity %></li>
    </ul>
<% end %>

<article class="edit-tag">
  <h1><%= t('.title') %></h1>

  <%= render partial: 'tags/form', locals: { entity: @entity } %>
</article>
