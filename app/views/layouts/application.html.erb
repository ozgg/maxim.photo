<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="UTF-8" />
  <title><%= yield :meta_title %> :: maxim.photo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>

<div id="main" role="main">
  <% if current_user %>
      <ul>
        <li><%= link_to t('index.index.title'), root_path %></li>
        <li><%= link_to t('administration.index.title'), admin_path %></li>
        <li><%= link_to t(:logout), logout_path, method: :delete %></li>
      </ul>
  <% end %>

  <%= render 'shared/flash_messages' %>
  <%= render 'shared/options' %>

  <%= yield %>
</div>

<%= render 'layouts/metrics' %>
<%= render 'layouts/footer' %>
<%= render 'layouts/fonts' %>
</body>
</html>
