<%= form_for entity do |f| %>
    <%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

    <figure>
      <% unless entity.image.blank? %>
          <%= image_tag entity.image.medium.url, alt: t(:current_image) %>
      <% end %>

      <div><%= f.label :image %></div>
      <div><%= f.file_field :image, accept: 'image/jpeg' %></div>
    </figure>

    <div>
      <div><%= f.label :name %></div>
      <div><%= f.text_field :name, required: true, size: 50 %></div>
    </div>

    <div>
      <div><%= f.label :slug %></div>
      <div><%= f.text_field :slug, required: true, size: 50 %></div>
    </div>

    <div>
      <%= f.button t(:submit), type: :submit %>
    </div>
<% end %>
