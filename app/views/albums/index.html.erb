<% content_for :meta_title, t('.title') %>

<article>
  <div class="content-wrapper">
    <header>
      <h1><%= t('.heading') %></h1>
    </header>

    <% if component_handler.allow? %>
      <ul class="actions">
        <li><%= gear_icon(admin_albums_path) %></li>
      </ul>
    <% end %>

    <%= render partial: 'albums/index/themed', locals: { collection: @collection[:themed] } %>
    <%= render partial: 'albums/index/stories', locals: { collection: @collection[:stories] } %>
  </div>
</article>
