<% content_for :meta_title, @entity.title %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('albums.index.nav_text'), albums_path) %>
  <span><%= @entity.title %></span>
<% end %>

<article>
  <h1><%= @entity.title %></h1>

  <% if @entity.editable_by?(current_user) %>
    <ul class="actions">
      <li><%= gear_icon(photos_admin_album_path(id: @entity.id)) %></li>
    </ul>
  <% end %>

  <%= render partial: 'photos/list', locals: { collection: @entity.photos.list_for_visitors } %>
</article>
