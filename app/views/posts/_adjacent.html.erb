<% if posts[:prev].is_a?(Post) || posts[:next].is_a?(Post) %>
    <nav class="adjacent">
      <div class="prev">
        <% if posts[:prev].is_a? Post %>
            <div><%= link_to t('.previous'), posts[:prev] %></div>
            <%= render partial: 'posts/preview', locals: { post: posts[:prev] } %>
        <% end %>
      </div>
      <div class="next">
        <% if posts[:next].is_a? Post %>
            <div><%= link_to t('.next'), posts[:next] %></div>
            <%= render partial: 'posts/preview', locals: { post: posts[:next] } %>
        <% end %>
      </div>
    </nav>
<% end %>
