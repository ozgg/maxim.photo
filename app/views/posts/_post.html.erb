<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <h1 itemprop="name"><%= post.title %></h1>
  <meta itemprop="headline" content="<%= post.headline %>" />
  <meta itemscope itemprop="mainEntityOfPage" itemType="https://schema.org/WebPage" itemid="<%= url_for %>" content="<%= url_for %>" />
  <% if current_user %>
      <nav class="actions">
        <ul>
          <li><%= link_to t(:edit), edit_post_path(post) %></li>
          <li><%= link_to t(:create), new_post_path %></li>
        </ul>

        <%= render partial: 'posts/snippet', locals: { post: post } %>
      </nav>
  <% end %>
  <% unless post.image.blank? %>
      <figure itemprop="image" itemscope itemtype="https://schema.org/ImageObject">
        <%= link_to image_tag(post.image.big.url, alt: post.title), post.image.big.url %>
        <meta itemprop="url" content="<%= request.protocol + request.host_with_port + post.image.medium_square.url %>" />
        <meta itemprop="width" content="360">
        <meta itemprop="height" content="360">
      </figure>
  <% end %>

  <div class="body" itemprop="articleBody"><%= simple_format post.body %></div>

  <span itemprop="author" itemscope itemtype="https://schema.org/Person">
    <meta itemprop="name" content="<%= t('layouts.footer.copyright') %>" />
  </span>
  <span itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
    <meta itemprop="name" content="maxim.photo" />
    <span itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
      <meta itemprop="url" content="http://maxim.photo/maxim.jpg">
      <meta itemprop="width" content="320" />
      <meta itemprop="height" content="320" />
    </span>
  </span>
  <meta itemprop="dateModified" content="<%= post.updated_w3c %>" />
  <meta itemprop="keywords" content="<%= post.tags_string %>" />
  <%= render partial: 'posts/tags', locals: { tags: post.tags.ordered_by_body } %>
  <footer><%= time_tag post.created_at, itemprop: 'datePublished' %></footer>
</article>
