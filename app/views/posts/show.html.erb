<% content_for :meta_title, @entity.title %>
<% unless @entity.image.blank? %>
    <% content_for :meta_image, request.protocol + request.host_with_port + @entity.image.medium.url %>
<% end %>
<% content_for :meta_description, @entity.lead unless @entity.lead.blank? %>
<% content_for :meta_type, 'article' %>
<% content_for :meta_type_extension do %>
    <meta property="og:article:published_time" content="<%= @entity.created_date %>"/>
    <meta property="og:article:modified_time" content="<%= @entity.updated_date %>"/>
    <% @entity.tags.each do |tag| %>
        <meta property="og:article:tag" content="<%= tag.body %>"/>
    <% end %>
<% end %>

<%= render @entity %>
<%= render partial: 'adjacent', locals: { posts: @entity.adjacent } %>
